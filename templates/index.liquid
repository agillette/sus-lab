{% block scripts %}
<script type="text/javascript">
	$(document).ready(function() {
		$(window).scroll(function() {
			$('.targettable').each(function() {
				var target = $(this).attr('id');
				target = '#'+target;
				var targetPixels = $(target).offset().top;
				if( $(window).scrollTop() > (targetPixels - 400) && $(window).scrollTop() < (targetPixels - 200) ) {
					// $('.visible-now').removeClass('visible-now');
					$(target).addClass('visible-now');
					return false;
				}
			});
			$('.home-intro-section').each(function() {
				var getTo = $(this).offset().top;
				var getHeight = $(this).height();
				var winHeight = $(window).height();
				getTo = getTo - (winHeight - getHeight);
				if( $(window).scrollTop() > getTo && $(window).scrollTop() < (getTo + winHeight) ) {
					$(this).css({ backgroundPosition: '50% '+( ( $(window).scrollTop() - getTo ) / 7 )+'%' });
				}
			});
		});
	});
</script>
{% endblock %}